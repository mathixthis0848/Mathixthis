#Serveur 
# coding: utf-8

import socket

# Créer une socket
server_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)

# Lier la socket à une adresse IP et un port
server_socket.bind(('192.168.97.255', 9142))

# Mettre la socket en mode écoute
server_socket.listen(5)
print("Le serveur ecoute sur le port 9142...")

while True:
    # Accepter la connexion du client
    client, address = server_socket.accept()
    print("{} connected".format(address))

    try:
        # Recevoir des données du client
        response = client.recv(1024)
        if response:
            print(response.decode('utf-8'))
    except socket.error as e:
        print("Erreur lors de la réception des données:", e)
    finally:
        # Fermer la connexion avec le client
        client.close()

        
#Client 
# coding: utf-8

import socket

hote = "192.168.97.255"
port = 9142


socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
socket.connect((hote, port))
print ("Connection on {}".format(port))

socket.send("Msg reçu")

print ("Ferme")
socket.close()
