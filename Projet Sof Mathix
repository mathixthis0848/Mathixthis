#SERVEUR
# coding: utf-8

import socket

# Créer une socket
server_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)

# Lier la socket à une adresse IP et un port
server_address = ('37.71.146.106', 9142)
server_socket.bind(server_address)

# Mettre la socket en mode écoute
server_socket.listen(5)
print("Le serveur ecoute sur le port 9142...")

try:
    while True:
        # Accepter la connexion du client
        client, address = server_socket.accept()
        print("Connexion de {}".format(address))

        try:
            # Recevoir des données du client
            data = client.recv(1024)
            if data:
                print(data.decode('utf-8'))
        except socket.error as e:
            print("Erreur lors de la réception des données:", e)
        finally:
            # Fermer la connexion avec le client
            client.close()

except KeyboardInterrupt:
    print("\nArrêt du serveur.")
finally:
    # Fermer la socket du serveur
    server_socket.close()

#CHAT
# coding: utf-8
#!/usr/bin/env python3

import socket

def send_message(message):
    try:
        # Connexion au serveur
        with socket.create_connection((' 37.71.146.106', 9142)) as client_socket:
            print("Connecté au serveur.")

            # Envoyer des données au serveur
            client_socket.sendall(message.encode('utf-8'))
            print("Message envoyé avec succès.")

    except ConnectionError as e:
        print("Erreur de connexion au serveur:", e)

if __name__ == "__main__":
    message_to_send = "Hello, serveur!"
    send_message(message_to_send)
